<h1>商品編集</h1>
<%= form_with model: @item, url:admin_item_path(@item.id), method: :patch do |f| %>
  <p>商品画像 <%= f.file_field :image, accept: "image/*" %></p>
  <p>商品名 <%= f.text_field :name, autofocus: true, id:"inputName" %></p>
  <p>ジャンル <%= f.collection_select :genre_id, Genre.all, :id, :name, id:"inputGenre" %></p>
  <p>商品説明 <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %></p>
  <p>税抜価格 <%= f.number_field :price,autofocus: true, id:"inputPrice" %></p>

  <%= f.submit "変更を保存", class:"btn btn-primary" %>
<% end %>