<section class="containar d-flex justify-content-center p-3">
  <div class="col-9 p-3">
    <h1 style="color: red;">安否確認リスト</h1>
    <table class="table table-hover table-inverse mt-3">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>年齢</th>
          <th>電話番号</th>
          <th>最終ログイン</th>
        </tr>
      </thead>
      <% @customers.each do |customer|%>
      <tbody>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
          <td><%= (Date.today.strftime('%Y%m%d').to_i - customer.birthday.strftime('%Y%m%d').to_i)/10000 %>歳</td>
          <td><%= customer.telephone_number %></td>
          <td><%= customer.last_sign_in_at.strftime('%Y年%m月%d日') %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</section>