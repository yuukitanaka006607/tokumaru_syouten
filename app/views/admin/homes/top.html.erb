<section class="containar d-flex justify-content-center p-3">
  <div class="col-9 p-3">
    <h1 class= "p-3">注文履歴一覧</h1>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>注文日時</th>
          <th>注文者</th>
          <th>注文点数</th>
          <th>請求金額</th>
          <th>配送状況</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id) %></td>
          <td><%= order.name %></td>
          <td><%= order.order_items.sum(:amount) %> 点</td>
          <td><%= order.billing_amount %> 円</td>
          <td><%= order.status_i18n %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</section>