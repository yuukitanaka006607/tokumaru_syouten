<h1>ジャンル一覧・追加</h>
<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
  <p>ジャンル名</p>
  <%= f.text_field :name %>
  <%= f.submit "新規登録", class:"btn btn-success" %>
<% end %>

<h1>ジャンル一覧</h1>
<table>
  <thead>
    <tr>
      <th>ジャンル名</th>
      <th></th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
  <tr>
    <td><%= genre.name %></td>
    <td><%= link_to "編集する",edit_admin_genre_path(genre.id) %></td>
    <% end %>
  </tr>
</table>