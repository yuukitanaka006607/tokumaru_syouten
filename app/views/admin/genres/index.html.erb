<section class="containar d-flex justify-content-center p-3">
  <div class="col-4 p-5">
    <h1 class="border-bottom border-info">ジャンル新規追加</h1>
    <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
      <p>ジャンル名</p>
      <%= f.text_field :name %>
      <%= f.submit "新規登録", class:"btn btn-success" %>
    <% end %>
  </div>
  <div class="col-8 p-5">
    <h1>ジャンル一覧</h1>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>ジャンル名</th>
          <th></th>
        </tr>
      </thead>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する",edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
        <% end %>
      </tr>
    </table>
  </div>

</section>