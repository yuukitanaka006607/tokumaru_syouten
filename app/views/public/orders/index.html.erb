<section class="containar d-flex justify-content-center p-3">
  <div class="col-9 p-3">
    <h1 class="p-3">注文履歴一覧</h1>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>注文日</th>
          <th>お届け先住所</th>
          <th>注文点数</th>
          <th>請求金額</th>
          <th>配送状況</th>
          <th>注文詳細</th>
        </tr>
      </thead>
       <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
          </td>
          <td><%= order.order_items.sum(:amount) %></td>
          <td><%= order.billing_amount %></td>
          <td><%= order.status_i18n %></td>
          <td><%= link_to "詳細", order_path(order.id), class:"btn btn-success" %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</section>
