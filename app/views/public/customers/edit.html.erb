<div class="containar d-flex justify-content-center p-5">
  <div class="col-5 border border-5 shadow p-5">
  <%= form_with model: @customer, url: customers_information_path do |f| %>
  <h1 class="border-bottom border-info">会員情報編集</h1>
  <div class="input-group pt-3">
      <p>氏名</p>
      <%= f.text_field :last_name, autoforcus: true, id:"inputLastName", class:"form-control m-3" %>
      <%= f.text_field :first_name, autoforcus: true, id:"inputFirstName", class:"form-control m-3" %>
    </div>

    <div class="input-group m-3">
      <p>フリガナ</p>
      <%= f.text_field :last_name_kana, autofocus: true, id:"inputLastNameKana", class:"form-control m-3" %>
      <%= f.text_field :first_name_kana, autofocus: true, id:"inputLastNameKana", class:"form-control m-3" %>
    </div>

    <div class="field">
      <p>誕生日</p>
      <%= f.date_select :birthday,{start_year: 1950, end_year:2020,
        include_blank: true, use_two_digit_numbers: true}, class:"btn btn-outline-dark" %>
    </div>

    <div class="field">
      <p>郵便番号</p>
      <%= f.text_field :postal_code, autofocus: true, id:"inputPostalCode", class:"form-control" %>
    </div>

    <div class="field">
      <p>住所</p>
      <%= f.text_field :address, autofocus: true, id:"inputAdress", class:"form-control" %>
    </div>

    <div class="field">
      <p>電話番号</p>
      <%= f.text_field :telephone_number, autofocus: true, id:"inputTelephoneNumber", class:"form-control" %>
    </div>

    <div class="field">
      <p>メールアドレス</p>
      <%= f.email_field :email, autofocus: true, id:"inputEmail", class:"form-control" %>
    </div>
    <%= f.submit "変更内容を保存", class:"btn btn-success shadow m-5" %>
    <%= link_to "退会する", customers_check_path, class:"btn btn-danger shadow m-5" %>
  <% end %>
  </div>
</div>