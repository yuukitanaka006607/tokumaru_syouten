<div class="containar d-flex justify-content-center p-3">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h2 class="border-bottom border-info pt-3">会員ログイン</h2>
    <div class="field pt-3">
      <%= f.label :"メールアドレス", class:"form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control m-3" %>
    </div>

    <div class="field">
      <%= f.label :password, class:"form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control m-3" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class:"btn btn-primary shadow m-5" %>
      <%= link_to "ゲストログイン", customers_guest_sign_in_path, class:"btn btn-success shadow m-5" %>
    </div>
  <% end %>
</div>
